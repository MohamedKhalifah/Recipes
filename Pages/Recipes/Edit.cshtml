@page "{id:int?}"
@model Recipes.EditModel
@{
    ViewData["Title"] = "Edit";
}

<h1>Edit Recipe</h1>

<form method="post">
    <input type="hidden" asp-for="Recipe.Id " />
    <div class="form-group">
        <label asp-for="Recipe.Name"></label>
        <input asp-for="Recipe.Name" class="form-control" />
        <span class="text-danger" asp-validation-for="Recipe.Name"></span>
    </div>
    <div class="form-group">
        <label asp-for="Recipe.Review"></label>
        <input asp-for="Recipe.Review" class="form-control" />
        <span class="text-danger" asp-validation-for="Recipe.Review"></span>
    </div>
    <div class="form-group">
        <label asp-for="Recipe.Category"></label>
        <select asp-for="Recipe.Category" asp-items="Model.Categories" class="form-control">
        </select>
        <span class="text-danger" asp-validation-for="Recipe.Category"></span>
    </div>
    <button type="submit" class="btn btn-primary">
        Save
    </button>
</form>


